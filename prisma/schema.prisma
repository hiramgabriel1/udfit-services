generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Doctor {
  id       String    @id @default(uuid())
  username String
  lastname String
  email    String
  password String
  patients Patient[] // uno a muchos
}

model Patient {
  id       String   @id @default(uuid())
  username String
  email    String
  password String
  weight   Int
  height   Int
  age      Int
  gender   String
  role     String
  doctorId String?
  doctor   Doctor?   @relation(fields: [doctorId], references: [id])
  dietas   Dietas[]
}

model Dietas {
  id        String  @id @default(uuid())
  patientId String
  patient   Patient @relation(fields: [patientId], references: [id])
}